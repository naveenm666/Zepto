<div class="container" style="margin-top:150px;">
  <div class="row">
    <div class="col-6">
     <div class="card" style="width:90%; height: 350px;">
        <div class="card-body">
        </div>
      </div>

      <h4 style="margin-top:30px;">About Product</h4>
      <ul>
        <li>Description:<%= @product.about_product %></li>
        <li>Country_of_origin:<%= @product.country_of_origin %></li>
        <li><%= @product.shelf_life %></li>
        <li><%= @product.manufacturer_name %></li>
        <li><%= @product.manufacturer_address %></li>
      </ul>
      

    </div>

    <div class="col-6">
      <p> Home ><%= @product.name %></p>
      <h4><%= @product.name %></h4>
      <p><%= @product.weight %> grams</p>
      <h4><%= number_to_currency(@product.price, unit: 'â‚¹') %></h4>
      <div id="add-to-cart-btn-<%= @product.id %>" >
        <%= form_for :product, url: "/products/#{@product.id}/add_to_cart", method: :post, remote: true do |f| %>
            <%= f.submit "Add", class: "btn btn-danger btn-lg text-decoration-none custom-btn"%>
        <% end %>
      </div>
      <div id="quantity-buttons-<%= @product.id %>"></div>
    </div>
  </div> 
</div>
