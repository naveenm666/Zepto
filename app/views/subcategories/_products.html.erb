<!-- app/views/subcategories/_products.html.erb -->
<% if @subcategory %>
  <h4><%= @subcategory.name %></h4>
<% end %>

<% products.each do |product| %>
  <div class="col-md-4">
    <div class="card h-100">
      <%= link_to product_path(product) do %>
        <div class="card-body">
          <h5 class="card-title" style=" overflow: hidden; font-size: 16px;"><%= product.name %></h5>
          <p class="card-text">Weight: <%= product.weight %></p>
          <p class="card-text">Price: <%= product.price %></p>
        </div>
      <% end %>
      <div style="position: absolute; bottom: 20px; left: 70%; transform: translateX(-50%);">
        <div id="add-to-cart-btn-<%= product.id %>" >
          <%= form_for :product, url: "/products/#{product.id}/add_to_cart", method: :post, remote: true do |f| %>
            <%= f.submit "Add ", class: "btn btn-danger btn-block"%>
          <% end %>
        </div>
        <div id="quantity-buttons-<%= product.id %>"></div>
      </div>
    </div> 
  </div>
<% end %>
