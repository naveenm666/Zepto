<% @cart.cart_products.each do |cart_product| %>
  <p>
    <%= cart_product.product.name %> - Quantity: <%= cart_product.quantity %>
    
    <%= form_for(cart_product, url:decrement_cart_quantity_cart_path(cart_product), method: :post) do |f| %>
      <%= f.hidden_field :product_id, value: cart_product.product.id %>
      <%= f.submit "-" %>
    <% end %>
    <%= cart_product.quantity %>
    <%= form_for(cart_product, url: add_to_cart_cart_path(cart_product), method: :post) do |f| %>
      <%= f.hidden_field :product_id, value: cart_product.product.id %>
      <%= f.submit "+" %>
    <% end %>
  </p>
<% end %>